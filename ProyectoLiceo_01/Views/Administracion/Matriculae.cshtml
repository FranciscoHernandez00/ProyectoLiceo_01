@* Ajax post type, the data is sent to the controller to be subsequently
    saved in their models. Both tables are filled at the same time  *@

<script>

    var Alumnas = {
        NombreCompleto: $("#NombreCompleto").val,
        NIE: $("#NIE").val,
        Edad: $("#Edad").val,
        Matriculada: $("#Matriculada").val,
        Opcion: $("#Opcion").val,
        Anio: $("#Anio").val,
        Direccion: $("#Direccion").val,
        FechaNacimiento: $("#FechaNacimiento").val,
        Vivecon: $("#Vivecon").val,
        NumeroFamilia: $("#NumeroFamilia").val,
        DistanciaKm: $("#DistanciaKm").val,
        Transporte: $("#Transporte").val,
        Enfermedad: $("#Enfermedad").val,
        CualUno: $("#CualUno").val,
        Medicamento: $("#Medicamento").val,
        CualDos: $("#CualDos").val,
        Depende: $("#Depende").val,
        Escuela: $("#Escuela").val,
        Actividad: $("#Actividad").val,
       
    };

    var Responsable = {
        NombrePadre: $("#NombrePadre").val,
        DUI: $("#DUI").val,
        Profesion: $("#Profesion").val,
        Nacionalidad: $("#Nacionalidad").val,
        NombreMadre: $("#NombreMadre").val,
        DUIMadre: $("#DUIMadre").val,
        ProfesionMadre: $("#ProfesionMadre").val,
        NacionalidadMadre: $("#NacionalidadMadre").val,
        NombreResponsable: $("#NombreResponsable").val,
        FechaNacimientoResponsable: $("#FechaNacimientoResponsable").val,
        Lugar: $("#Lugar").val,
        DUIResponsable: $("#DUIResponsable").val,
        Telefono: $("#Telefono").val,
        Parentesco: $("#Parentesco").val,
        Escolaridad: $("#Escolaridad").val,
        DocumentosEntregados: $("#DocumentosEntregados").val,
    };

    $("#btnCreate").click(function () {
        $.ajax({
            type: "POST",
            url: "~/Controllers/AdministracionController/Matriculae",
            contentType: "application/json; charset=utf-8",
            data: Alumnas, Responsable,
            dataType: "json",
            success: function (response) {
                alert("Hello");
            },
            failure: function (response) {
                alert(response.responseText + "ERROR");
            },
            error: function (response) {
                alert(response.responseText + "ERROR");
            }
        });
    });

</script>
